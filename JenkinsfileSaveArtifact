pipeline {

    agent any

    stages {
    	stage('Build backend') {
            steps {
                echo "Build backend with maven"
                sh 'mvn -B -DskipTests clean package'
                echo "ls"
               	sh "ls"
               	echo "ls target/"
               	sh "ls target/"
            }
        }
    }
    
    post {
        always {
            echo "Save Artifact"
            echo "ls target/"
            sh "ls target/"
            archiveArtifacts artifacts: 'target/mitocode-calculator.jar', onlyIfSuccessful: true
        }

        success {
            echo "success"
        }

        unstable {
            echo "unstable"
        }

        failure {
            echo "failure"
        }

        changed {
            echo "changed"
        }
    }
}

